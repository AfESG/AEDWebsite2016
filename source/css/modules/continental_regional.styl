.subgeography-totals
  font-size 0.9em
  tbody tr
    background transparent
    border-top none
    border-bottom 1px solid $gray-light
    border-collapse collapse
    transition background-color 0.3s
    &:hover
      background #f8f8f8
      transition background-color 0.3s
  thead tr
    border-top 0
  th:not(:first-child), td:not(:first-child)
    text-align right
  td
    padding 0.9em 0.65em
    
  &--causes-of-change
    margin-top: 30px

.subgeography-totals__subgeography-name
  font-weight 700
  padding 0.8em 0
  span
    color $text-light
    display inline-block
    font-weight 400
    font-size 88%
    margin-left 0.2em

.subgeography-totals__estimate
  font-weight 700
  width 10%
  text-align right

.subgeography-totals__totals
  font-weight bold
  border-bottom 0 !important
  border-top 1px solid black !important


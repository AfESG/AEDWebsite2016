.help-nav
  position absolute
  bottom 35px
  right 15px
  font-weight bold
  border 2px solid $border-md
  padding 7px 11px 4px 10px
  border-radius 50%
  line-height 1
  text-align center
  font-size 20px
  background #fff
  color $text-light-2
  text-decoration none

.secondary-nav
  position fixed
  transition bottom 350ms ease-in-out, right 350ms ease-in-out, height 350ms ease-in-out, width 350ms ease-in-out
  float right
  &.inactive
    height 0
    width 0
    bottom -100%
    right -100%
  &.active
    width 100%
    height 100%
    background #fff
    z-index 1001
    bottom 0
    right 0

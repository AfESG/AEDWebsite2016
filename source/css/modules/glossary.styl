$glossary-sidebar-width = 30vw
$glossary-content-width = 70vw

.glossary-container
  position relative
  display block
  width 100%
  
  button
    background $brand-orange
    border-radius 3px
    color $white
    letter-spacing 0.2em
    margin 1em 0
    min-width 225px
    padding 1.5em 1.5em 1.6em
    text-transform uppercase
    transition background-color 0.25s
    &:hover
      background darken($brand-orange, 10%)
      transition background-color 0.25s

.glossary-sidebar
  background $brand-dark
  height 100%
  position fixed
  top 0
  left 0
  border-right 1px solid $gray-light
  padding 60px 30px
  width $glossary-sidebar-width
  
  h2
    color $white
    font-family 'Noe Display', Georgia, serif
    font-size 2.2em
    margin-bottom 0.75em
    
  h4
    color lighten($brand-dark-md, 15%)
    font-size 0.75em
    letter-spacing 0.15em
    text-transform uppercase
    padding 1em 0 0.5em
  
  &__close
    width 22px
    height 22px
    position absolute
    top 20px
    left 20px
    background transparent url(/images/icon-close.svg) no-repeat center center
    background-size contain
    cursor pointer
    opacity 0.65
    transition opacity 0.25s
    &:hover
      opacity 1
      transition opacity 0.25s

  &__logo
    width 100%
    height 100px
    margin 0 auto 3em
    background url('/images/afesg-notext-logo.png') no-repeat center center
    background-size contain
    text-align center
    &:after
      content ''

  button
    background $brand-dark
    width 100%
    &:hover
      background $brand-dark-md

  .glossary-menu__list
    position static
    
    &__item
      position relative
      background $brand-dark
      border-top 1px solid $brand-dark-md
      font-size 0.95em
      font-weight 600
      width 100%
      transition background-color 0.25s
      &:hover
        background darken($brand-dark, 25%)
        transition background-color 0.25s
      &:last-child
        border-bottom 1px solid $brand-dark-md
      
      a
        color darken($gray-light, 25%)
        display block
        padding 0.75em
        position relative
        text-decoration none
        transition color 0.25s
        &:hover
          color $white
          transition color 0.25s
          &:after
            opacity 1
            transition opacity 0.25s
        &:after
          background url('/images/chevron-bold-down.svg') no-repeat 50% 70%
          background-size 100%
          content ''
          display inline-block
          height 12px
          opacity 0
          position absolute
          right 1em
          top 38%
          -ms-transform rotate(-90deg)
          -webkit-transform rotate(-90deg)
          transform rotate(-90deg)
          width 12px
          transition opacity 0.25s
                
      &.active
        background darken($brand-dark, 35%)
        &:after
          background url('/images/chevron-bold-down.svg') no-repeat 50% 70%
          background-size 100%
          content ''
          display inline-block
          height 12px
          position absolute
          right 1em
          top 38%
          -ms-transform rotate(-90deg)
          -webkit-transform rotate(-90deg)
          transform rotate(-90deg)
          width 12px
  
  &__actions
    margin-top 30px
      
.glossary-content
  font-size 0.95em
  position relative
  width $glossary-content-width
  height 100%
  margin-left $glossary-sidebar-width
  overflow-y auto
  padding 30px 60px
  
  &__section
    position relative
    max-width 700px
    width 100%
    height auto
    margin 0 auto 20px
    padding-bottom 40px
    border-bottom 1px solid #dddddd
    
    &__intro
      border-bottom 1px solid $gray-light
      padding-bottom 2em
    
  h2
    color $brand-dark
    font-size 38px
    margin 0 0 1em

  h3
    color $brand-dark
    font-size 26px
    margin 1em 0
    padding-top 1em
  p
    color $brand-dark
  
  a
    text-decoration none
    color darken($central-africa, 20%)
    &:hover
      text-decoration underline
      
  .range-categories__list
    margin-left 10%
    margin-top 2em
    &__item
      h4
        font-size 0.9em
        letter-spacing 0.15em
      &__text
        margin 0.35em 0 1.75em
        
  .glossary-toggle-list
    &__item
      border-bottom 1px solid $gray-lightest
      transition background-color 0.25s
        
      &:hover
        background lighten($gray-lightest, 50%)
        transition background-color 0.25s
        
      &__header
        padding 1em
        position relative
        &:after
          background url('/images/chevron-bold-up.svg') no-repeat 50% 70%
          background-size 100%
          content ''
          display inline-block
          height 12px
          position absolute
          right 1em
          top 38%
          width 12px
          transition opacity 0.25s
        
        &__abbrv
          display table-cell
          font-weight bold
          width 75px
        &__title
          display table-cell
      &__text
        display block
        margin 0 0 1.5em 75px
        padding 0 1em
        
    &__item.closed
      .glossary-toggle-list__item__text
        display none
        
      .glossary-toggle-list__item__header
        &:after
          background url('/images/chevron-bold-down.svg') no-repeat 50% 70%
          background-size 100%
          content ''
          display inline-block
          height 13px
          position absolute
          right 1em
          top 38%
          width 13px
          transition opacity 0.25s
        
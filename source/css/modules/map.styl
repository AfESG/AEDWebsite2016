$stroke-opacity = 0
$fill-opacity = 0.68
$hover-fill-opacity = 0.25

.leaflet-container
  width 100%
  height 100%
  
.leaflet-control-container
  position relative
  z-index 1

.main__container.breadcrumbs-active .leaflet-control-container
  top 56px

.leaflet-marker-icon
  position relative

.leaflet-marker-icon.eastern-africa
  margin-left 1.5em !important

.leaflet-marker-icon__label
  width 200px
  text-align center
  display table
  margin 0 auto
  left -100px
  position absolute
  color #fff
  text-shadow 1px 2px rgba(0,0,0,0.15)
  font-weight bold
  text-transform uppercase
  letter-spacing 3px
  -webkit-font-smoothing antialiased
  pointer-events none

.mapsvg
  stroke-opacity $stroke-opacity
  fill-opacity $fill-opacity
  stroke-opacity 0.75
  stroke-width 2
  &:hover
    fill-opacity 0.85
    stroke-opacity 0
    stroke-width 2

/* hide norhern africa's label */
h1.region-4
  display none

path
  transition fill-opacity 200ms ease-in-out, stroke-width 200ms ease-in-out
  fill-opacity 0
  &.north-africa
    stroke-opacity 0
    fill-opacity 0
  &.eastern-africa
    stroke $eastern-africa
    fill $eastern-africa
    stroke-opacity 0
    @extend .mapsvg
    &:hover
      stroke darken($eastern-africa, 20%)
  &.central-africa
    stroke $central-africa
    fill $central-africa
    stroke-opacity 0
    @extend .mapsvg
    &:hover
      stroke darken($central-africa, 20%)
  &.west-africa
    stroke $west-africa
    fill $west-africa
    stroke-opacity 0
    @extend .mapsvg
    &:hover
      stroke darken($west-africa, 20%)
  &.southern-africa
    stroke $southern-africa
    fill $southern-africa
    stroke-opacity 0
    @extend .mapsvg
    &:hover
      stroke darken($southern-africa, 20%)

.adjacent
  transition stroke 200ms ease-in-out, fill 200ms ease-in-out, fill-opacity 200ms ease-in-out, stroke-width 200ms ease-in-out
  stroke #b5b5b5
  fill #dddddd
  fill-opacity 0.15
  stroke-opacity 0
  stroke-width 1.5
  
  &:hover
    stroke-opacity 0.8
    fill-opacity $hover-fill-opacity
  
  &--west-africa
    &:hover
      stroke $west-africa
      fill $west-africa
  
  &--southern-africa
    &:hover
      stroke $southern-africa
      fill $southern-africa 
  
  &--eastern-africa
    &:hover
      stroke $eastern-africa
      fill $eastern-africa 
  
  &--central-africa
    &:hover
      stroke $central-africa
      fill $central-africa 

.region-west-africa__country,
.region-west-africa__stratum
  stroke $west-africa
  fill $west-africa
  stroke-opacity 1
  fill-opacity 0.1
  stroke-width 1.5

.region-west-africa__country
  fill-opacity 0.1
  stroke-opacity 0
  
  &:hover
    fill-opacity 0.2

.region-west-africa__stratum
  stroke-width 1.0
  &:hover
    fill-opacity 0.5

  &.active
    fill-opacity 0.7

.region-central-africa__country,
.region-central-africa__stratum
  stroke $central-africa
  fill $central-africa
  stroke-opacity 1
  fill-opacity 0.1
  stroke-width 1.5

.region-central-africa__country
  fill-opacity 0.1
  stroke-opacity 0
  
  &:hover
    fill-opacity 0.4

.region-central-africa__stratum
  stroke-width 1.0
  &:hover
    fill-opacity 0.5
  &.active
    fill-opacity 0.7

.region-southern-africa__country,
.region-southern-africa__stratum
  stroke $southern-africa
  fill $southern-africa
  stroke-opacity 1
  fill-opacity 0.1
  stroke-width 1.5

.region-southern-africa__country
  fill-opacity 0.1
  stroke-opacity 0
  
  &:hover
    fill-opacity 0.4

.region-southern-africa__stratum
  stroke-width 1.25
  &:hover
    fill-opacity 0.5
  &.active
    fill-opacity 0.7


.region-eastern-africa__country,
.region-eastern-africa__stratum
  stroke $eastern-africa
  fill $eastern-africa
  stroke-opacity 1
  fill-opacity 0.1
  stroke-width 1.5
  
.region-eastern-africa__country
  fill-opacity 0.1
  stroke-opacity 0
  
  &:hover
    fill-opacity 0.4

.region-eastern-africa__stratum
  stroke-width 1.0
  &:hover
    fill-opacity 0.5
  &.active
    fill-opacity 0.7
  
    
.border
  stroke-width 0
  fill-opacity 0
  pointer-events none
  
.border--eastern-africa.border--region
  stroke $eastern-africa
  fill-opacity 0
  stroke-width 2
  pointer-events none

.border--southern-africa.border--region
  stroke $southern-africa
  fill-opacity 0
  stroke-width 2
  pointer-events none

.border--west-africa.border--region
  stroke $west-africa
  fill-opacity 0
  stroke-width 2
  pointer-events none

.border--central-africa.border--region
  stroke $central-africa
  fill-opacity 0
  stroke-width 2
  pointer-events none

.border--country
  stroke black
  fill-opacity 0
  stroke-width 2
  pointer-events none

.border--country.region--central-africa
  stroke $central-africa
  fill $central-africa
  fill-opacity 0.05

.border--country.region--southern-africa
  stroke $southern-africa
  fill $southern-africa
  fill-opacity 0.05

.border--country.region--eastern-africa
  stroke $eastern-africa
  fill $eastern-africa
  fill-opacity 0.05
  
.border--country.region--west-africa
  stroke $west-africa
  fill $west-africa
  fill-opacity 0.05



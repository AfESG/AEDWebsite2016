.stratum-popup
  border-radius none
  opacity 0.85 !important
  border none
  // top -1px
  // top -70px
  &__estimate-confidence
    display block
    font-family 'acumin-pro-condensed', sans-serif
    font-size 2.5em
    font-weight 400
    line-height 1
    margin-bottom 0.15em
    text-align left
    em
      font-size 50%
      font-style normal
    
    &.hidden
      display none 
  
  &__name
    display block
    font-family 'acumin-pro', Helvetica, sans-serif
    font-size 0.9em
    letter-spacing 0.15em
    text-align left
    text-transform uppercase

  .leaflet-popup-content-wrapper
    border-radius 0
    color $white
    padding-top 1px
    text-align center 
    border none
  
  .leaflet-popup-tip-container
    top -1px
    
  &--eastern-africa
    .leaflet-popup-content-wrapper, .leaflet-popup-tip
      background-color $eastern-africa
  &--west-africa

$stroke-opacity = 0
$fill-opacity = 0.75
$hover-fill-opacity = 0.85

.leaflet-container
  width 100%
  height 100%

.leaflet-control-container
  position relative
  z-index 1

.main__container.breadcrumbs-active .leaflet-control-container
  top 56px

.leaflet-marker-icon
  position relative

.leaflet-marker-icon__label
  width 200px
  text-align center
  display table
  margin 0 auto
  left -100px
  position absolute
  color #fff
  font-weight bold
  text-transform uppercase
  letter-spacing 3px
  -webkit-font-smoothing antialiased

.mapsvg
  stroke-opacity $stroke-opacity
  fill-opacity $fill-opacity
  stroke-opacity 0.75
  stroke-width 2
  &:hover
    fill-opacity $hover-fill-opacity
    stroke-opacity 1
    stroke-width 2

/* hide norhern africa's label */
h1.region-4
  display none

path
  transition fill-opacity 200ms ease-in-out, stroke-width 200ms ease-in-out
  &.north-africa
    stroke-opacity 0
    fill-opacity 0
  &.eastern-africa
    stroke $eastern-africa
    fill $eastern-africa
    @extend .mapsvg
    &:hover
      stroke darken($eastern-africa, 20%)
  &.central-africa
    stroke $central-africa
    fill $central-africa
    @extend .mapsvg
    &:hover
      stroke darken($central-africa, 20%)
  &.west-africa
    stroke $west-africa
    fill $west-africa
    @extend .mapsvg
    &:hover
      stroke darken($west-africa, 20%)
  &.southern-africa
    stroke $southern-africa
    fill $southern-africa
    @extend .mapsvg
    &:hover
      stroke darken($southern-africa, 20%)

.region-west-africa__country,
.region-west-africa__stratum
  stroke $west-africa
  fill $west-africa
  stroke-opacity 1
  fill-opacity 0.1
  stroke-width 1.5

.region-west-africa__country
  fill-opacity 0.1
  
  &:hover
    fill-opacity 0.2


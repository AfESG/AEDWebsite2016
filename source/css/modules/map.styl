$stroke-opacity = 0
$fill-opacity = 0.75
$hover-fill-opacity = 0.85
$eastern = #6fd4f2
$central = #60d085
$west = #9DDC52
$southern = #75e7d0

.leaflet-container
  width 100%
  height 100%

.leaflet-marker-icon
  position relative

.leaflet-marker-icon__label
  width 200px
  text-align center
  display table
  margin 0 auto
  left -100px
  position absolute
  color #fff
  font-weight bold
  text-transform uppercase
  letter-spacing 3px
  -webkit-font-smoothing antialiased

.mapsvg
  stroke-opacity $stroke-opacity
  fill-opacity $fill-opacity
  stroke-opacity 0.75
  stroke-width 2
  &:hover
    fill-opacity $hover-fill-opacity
    stroke-opacity 1
    stroke-width 2

/* hide norhern africa's label */
h1.region-4
  display none

path
  transition fill-opacity 200ms ease-in-out, stroke-width 200ms ease-in-out
  &.north-africa
    stroke-opacity 0
    fill-opacity 0
  &.eastern-africa
    stroke $eastern
    fill $eastern
    @extend .mapsvg
    &:hover
      stroke darken($eastern, 20%)
  &.central-africa
    stroke #60d085
    fill #60d085
    @extend .mapsvg
    &:hover
      stroke darken($central, 20%)
  &.west-africa
    stroke #9DDC52
    fill #9DDC52
    @extend .mapsvg
    &:hover
      stroke darken($west, 20%)
  &.southern-africa
    stroke #75e7d0
    fill #75e7d0
    @extend .mapsvg
    &:hover
      stroke darken($southern, 20%)

.region-west-africa-country
  stroke #BFE78B
  fill #BFE78B
  stroke-opacity 1
  fill-opacity 0.1
  stroke-width 1.5

.region-central-africa-country
  stroke #70CD8A
  fill #70CD8A
  stroke-opacity 1
  fill-opacity 0.1
  stroke-width 1.5

.region-southern-africa-country
  stroke #69DCC6
  fill #69DCC6
  stroke-opacity 1
  fill-opacity 0.1
  stroke-width 1.5

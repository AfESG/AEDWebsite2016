$stroke-opacity = 0
$fill-opacity = 0.15
$hover-fill-opacity = 0.08

.leaflet-container
  width 100%
  height 100%
  
.leaflet-control-container
  position absolute
  width 100%
  top auto !important
  bottom 0
  z-index 1

.leaflet-bottom .leaflet-control
  margin-bottom 0
  bottom 75px
  right 8px

// .main__container.breadcrumbs-active .leaflet-control-container
//   top 56px

.leaflet-marker-icon
  position relative

.leaflet-marker-icon.eastern-africa
  margin-left 1.5em !important

.leaflet-marker-icon__label
  width 200px
  text-align center
  display table
  margin 0 auto
  left -100px
  position absolute
  color #fff
  text-shadow 1px 2px rgba(0,0,0,0.15)
  font-weight bold
  text-transform uppercase
  letter-spacing 3px
  -webkit-font-smoothing antialiased
  pointer-events none

.mapsvg
  stroke-opacity $stroke-opacity
  fill-opacity $fill-opacity
  stroke-opacity 0.75
  stroke-width 1.5
  stroke-alignment inner
  &:hover
    fill-opacity 0.8
    stroke-opacity 1
    stroke-width 2.5

/* hide norhern africa's label */
h1.region-4
  display none

path
  transition fill-opacity 200ms ease-in-out, stroke-width 200ms ease-in-out
  fill-opacity 0
  stroke-opacity 0
  &.north-africa
    stroke-opacity 0
    fill-opacity 0
  &.eastern-africa
    stroke $eastern-africa
    fill $eastern-africa
    stroke-opacity 1
    @extend .mapsvg
    &:hover
      stroke darken($eastern-africa, 20%)
  &.central-africa
    stroke $central-africa
    fill $central-africa
    stroke-opacity 1
    @extend .mapsvg
    &:hover
      stroke darken($central-africa, 20%)
  &.west-africa
    stroke $west-africa
    fill $west-africa
    stroke-opacity 1
    @extend .mapsvg
    &:hover
      stroke darken($west-africa, 20%)
  &.southern-africa
    stroke $southern-africa
    fill $southern-africa
    stroke-opacity 1
    @extend .mapsvg
    &:hover
      stroke darken($southern-africa, 20%)

.adjacent
  transition stroke 200ms ease-in-out, fill 200ms ease-in-out, fill-opacity 200ms ease-in-out, stroke-width 200ms ease-in-out, stroke-opacity 200ms ease-in-out
  stroke #999999
  fill #dddddd
  fill-opacity 0
  stroke-opacity 1
  stroke-width 1.5
  
  &:hover
    stroke-opacity 0.8
    fill-opacity $hover-fill-opacity
  
  &--west-africa
    stroke $west-africa
    stroke-opacity 0.25
    &:hover
      stroke $west-africa
      stroke-opacity 1
      fill $west-africa
  
  &--southern-africa
    stroke $southern-africa
    stroke-opacity 0.25
    &:hover
      stroke $southern-africa
      stroke-opacity 1
      fill $southern-africa 
  
  &--eastern-africa
    stroke $eastern-africa
    stroke-opacity 0.25
    &:hover
      stroke $eastern-africa
      stroke-opacity 1
      fill $eastern-africa 
  
  &--central-africa
    stroke $central-africa
    stroke-opacity 0.25
    &:hover
      stroke $central-africa
      stroke-opacity 1
      fill $central-africa


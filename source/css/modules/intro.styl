.intro
  background-color #212121
  color white
  position absolute
  top 0
  left 0
  width 100%
  height 100vh
  overflow auto  
  z-index 1002
  
  &:before
    content 'BETA'
    color $southern-africa
    font-size 1em
    display inline-block
    position absolute
    top 0
    left 0
    padding 15px
    font-family 'acumin-pro', Helvetica, sans-serif
    font-weight 600
    letter-spacing 0.1em
    
  
  .about-us__link-grid__link
    @media (max-width 1599px)
      height 80px
      margin 15px 0 0
    @media (max-width 899px)
      margin 0
    @media (max-width $mobile-max)
      height 120px
      margin 30px 0 0

  &-bg
    position fixed
    top 0
    bottom 0
    left 0
    overflow hidden
    width 60%
    z-index -100
    background url('/images/aed-intro-background.jpg') no-repeat 20% 50%
    background-size cover

  &__entity-name
    font-family 'Noe Display', Georgia, serif
    font-weight 700
    font-style normal
    font-size 2.8em
    letter-spacing 0.015em
    line-height 1.15
    margin 50px 0 10px //margin top change temporary
    text-align center
    -webkit-font-smoothing auto
  
  &.dismissed
    transition opacity 150ms ease-in-out, z-index 300ms 300ms
    opacity 0
    z-index -1

  .intro__container
    margin 0
    
  .col-two-thirds
    background transparent
    width 60%
    @media (max-width $mobile-max)
      width 100%

  .col-one-third
    height 100%
    width 40%
    @media (max-width $mobile-max)
      width 100%
    
  .col-main
    background rgba(40, 40, 40, 1)
    float right
    height 100vh
    @media (max-width $mobile-max)
      background rgba(40, 40, 40, 1)
    
  .intro__inner
    // background-color transparent
    // background-image url('/images/elephant-loader.gif')
    // background-size 125px
    // background-position center bottom
    // background-repeat no-repeat
    height 100%
    min-height 700px
    overflow-y auto
    padding 25px 0 20vh
    text-align center
    width 100%
    left 50%
    top 50%
    transform translate(-50%, -50%)
    @media (max-width 1000px)
      background-image none
    @media (max-width $mobile-max)
      min-height 0
      // background-image url('/images/elephant-loader.gif')
    
    a:not(.about-us__link-grid__link)
      border-bottom 1px solid transparent
      color $southern-africa
      text-decoration none
      transition border-color 0.25s
      &:hover
        border-bottom 1px solid $southern-africa
        text-decoration none
        transition border-color 0.25s

    @media (max-width $mobile-max)
      background-size 110px
      

  .intro__title
    font-size 4em
    line-height 1
    margin 0 auto

  .intro__description
    font-family 'acumin-pro', Helvetica, sans-serif
    font-size 0.85em
    font-weight 200
    letter-spacing 0.015em
    line-height 1.55
    margin 0 auto 1.5em
    opacity 1
    text-align left
    width 100%
    p
      font-weight 100
      margin-bottom 1em
    @media (max-height 749px)
      font-size 0.75em
    @media (max-width 1249px)
      font-size 0.7em
    @media (max-width 1000px)
      font-size 0.65em
    @media (max-width $mobile-max)
      font-size 0.82em
      line-height 1.45
    
      

  .intro__loader
    background rgba(40, 40, 40, 0)
    height 100vh
    pointer-events none
    position absolute
    right 0
    top 0
    width 100%
    z-index 5
    animation intro-loader-background 10s 1 0s
    
    .intro__inner
      opacity 0
      position absolute
      bottom 0
      right 0
      width 100%
      -webkit-animation intro-header 7s 1 1s
      animation intro-header 7s 1 
      background-color transparent
      background-image url('/images/elephant-loader.gif')
      background-size 125px
      background-position center bottom
      background-repeat no-repeat
          
    h1
      font-size 3em
      left 50%
      line-height 1.1
      margin 0
      position absolute
      opacity 0
      top 50%
      transform translate(-50%, -50%)
      -webkit-animation intro-header 7s 1 1s
      animation intro-header 7s 1 
      @media (max-width $mobile-max)
        font-size 2.8em
                
  .intro__loaded
    position absolute
    z-index 2
    
    .intro__inner
      &-content
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)
        width 75%
        @media (max-width $mobile-max)
          margin 0.25% auto
          position relative
          left 0
          top 0
          transform none
          width 88%
      

  button, .button
    background #494949
    border-radius 0.35em
    font-size 0.65em
    letter-spacing 0.3em
    margin 0 auto
    opacity 1
    padding 1.7em 1.75em 1.75em
    text-align center
    text-transform uppercase
    width 100%
    transition background-color 0.3s
    &:hover
      background $southern-africa
      transition background-color 0.3s

  small
    font-size 0.68em
    letter-spacing 0.02em
    opacity 0.6
    
@keyframes intro-loader-background
  0%
    background rgba(40, 40, 40, 1)
    
  80%
    opacity 85
    background rgba(40, 40, 40, 1)
    
  100%
    opacity 0
    background rgba(40, 40, 40, 0)
    
@-webkit-keyframes intro-loader-background
  0%
    background rgba(40, 40, 40, 1)
    
  80%
    opacity 85
    background rgba(40, 40, 40, 1)
    
  100%
    opacity 0
    background rgba(40, 40, 40, 0)
      
@keyframes intro-header
  0%
    opacity 0
    
  20%
    opacity 25

  50%
    opacity 100
    
  80%
    opacity 85
    
  100%
    opacity 0
    
@-webkit-keyframes intro-header
  0%
    opacity 0
    
  20%
    opacity 25

  50%
    opacity 100
    
  80%
    opacity 85
    
  100%
    opacity 0

.intro.placeholder
  *
    animation none !important
    opacity 1 !important
  h2
    position: absolute;
    opacity: 0;
    top: 50%;
    left 50%;
    transform: translate(-50%, -50%);
    margin-top 25%
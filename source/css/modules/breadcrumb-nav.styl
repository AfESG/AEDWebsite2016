.breadcrumb-nav
  -webkit-box-shadow 2px 0px 5px rgba(0, 0, 0, 0.2)
  -moz-box-shadow 2px 0px 5px rgba(0, 0, 0, 0.2)
  box-shadow 2px 0px 5px rgba(0, 0, 0, 0.2)
  position absolute
  top 0
  left 0
  background white
  padding 0 0.5em
  z-index 2
  width 100%
  overflow hidden

.breadcrumb-nav__link
  border-bottom 1px solid transparent
  padding 12px
  text-decoration none
  text-transform uppercase
  color lighten($brand-dark-md, 35%)
  font-size 0.7em
  font-weight 300
  letter-spacing 0.15em
  transition color 0.2s
  &:hover
    color $brand-dark
    transition color 0.2s
  &.color--region-west-africa,
  &.color--region-central-africa,
  &.color--region-eastern-africa,
  &.color--region-southern-africa
    font-size 0.72em
    font-weight 600
    pointer-events none
    transition none
    &:hover
      color inherit
      transition none

.breadcrumb-nav__link,
.breadcrumb-nav__separator
  display inline-block
  vertical-align center

.breadcrumb-nav__separator
  color #999
  opacity .4
  font-size 13px
  transform translateY(-1px)
  

.total-count
  position fixed
  bottom 15px
  left 15px
  font-family 'acumin-pro-condensed', sans-serif
  &__count
    font-weight bold
    font-size 70px
    margin-bottom 15px
    position relative
    bottom 10px
  small
    background $white
    display block
    text-transform uppercase
    letter-spacing 0.15em
    color #666
    font-size 11px
    font-family 'acumin-pro', Helvetica, sans-serif
    padding 0 0.45em
    margin-bottom 0.5em

.total-count__plus-minus
  font-size 78%
  position relative
  bottom 5px

.total-count__guesses
  position relative
  padding 0 0.3em
  line-height 1
  font-size 18px

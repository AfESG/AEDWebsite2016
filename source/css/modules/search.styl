.search__container
  width 100%
  position relative
  max-width 800px
  height 40px

.search__input
  border 1.5px solid $border
  display block
  width 100%
  height 40px
  background white
  box-shadow inset 0 0 2px #ddd
  float right
  padding 0
  &.focused
    width 100%
    border-radius 0
    transition width ease 300ms, border-radius 50ms ease 50ms
  &.blurred
    border-radius 50%
    width 40px
    color transparent
    transition width ease 300ms, border-radius 100ms ease 150ms

.search__input input
  padding 12px 15px
  border none
  display block
  width 100%
  border-radius 0

.icon__magnifying-glass
  position absolute
  border 2.5px solid #888
  border-radius 30px
  width 14px
  height 14px
  display inline-block
  right 10px
  top 10px
  cursor text
  &:after
    content ''
    width 2.5px
    height 8px
    position absolute
    top 8px
    left -3px
    transform rotate(45deg)
    background #888

::-webkit-input-placeholder
  text-transform uppercase
  letter-spacing 1px
  font-size 10px

.search__results
  width 100%
  position absolute
  right 0
  top 40px

.search__result-item
  padding 0 15px
  background white
  height 40px
  line-height 40px
  border 1.5px solid $border
  border-top none
  font-size 11px
  transition 300ms ease background
  cursor pointer

  &:hover
    background #f7f4f4

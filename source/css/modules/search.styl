@import 'typography'

.search__container
  width 100%
  position relative
  max-width 800px
  height 40px

.search__overlay
  background rgba($brand-dark, .7);
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 1

.search__input
  border 1.5px solid $border
  display block
  width 100%
  height 40px
  background white
  box-shadow inset 0 0 2px #ddd
  float right
  padding 0

  &.focused
    width 100%
    border-radius 3px
    transition width ease 300ms, border-radius 50ms ease 50ms
  &.blurred
    border-radius 50%
    width 40px
    color transparent
    transition width ease 300ms, border-radius 100ms ease 150ms

.search__input input
  padding 12px 15px
  border none
  display block
  width 100%
  border-radius 3px

  &:focus,
  &:active
    outline 0

.icon__magnifying-glass
  position absolute
  border 2.5px solid #888
  border-radius 30px
  width 14px
  height 14px
  display inline-block
  right 10px
  top 10px
  cursor text
  &:after
    content ''
    width 2.5px
    height 8px
    position absolute
    top 8px
    left -3px
    transform rotate(45deg)
    background #888

::-webkit-input-placeholder
  text-transform uppercase
  letter-spacing 1px
  font-size 12px

.search__results
  width 100%
  position absolute
  right 0
  top 37.5px
  max-height 410px
  overflow-y auto
  border-top 1.5px solid $border
  border-bottom-left-radius 3px
  border-bottom-right-radius 3px

.search__result-item
  display block
  text-decoration none
  padding 15px
  background white
  border 1.5px solid $border
  border-top none
  font-size 16px
  transition 300ms ease background
  cursor pointer
  color $brand-dark

  &:hover
    background #f7f4f4

  strong
    display block
    margin-right 5px
    max-width 60%
    text-overflow ellipsis
    overflow hidden

.search__result__parent-label
  @extend .small-heading
  color $text-light

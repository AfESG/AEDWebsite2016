@import 'typography'

.search__container
  width 100%
  position relative
  height 40px

.search__overlay
  background rgba(#222, 0.5);
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 1

.search__input
  -moz-box-shadow 0 0 6px rgba(0, 0, 0, 0.35)
  -webkit-box-shadow 0 0 6px rgba(0, 0, 0, 0.35)
  -o-box-shadow 0 0 6px rgba(0, 0, 0, 0.35)
  -ms-box-shadow 0 0 6px rgba(0, 0, 0, 0.35)
  box-shadow 0 0 6px rgba(0, 0, 0, 0.35)
  display block
  width 100%
  height 40px
  background white
  float right
  padding 0

  &.focused
    width 100%
    border-radius 3px
    transition width ease 300ms, border-radius 50ms ease 50ms
  &.blurred
    border-radius 50%
    width 40px
    color transparent
    transition width ease 300ms, border-radius 100ms ease 150ms

.search__input input
  color $brand-dark-md
  font-family 'acumin-pro', Helvetica, sans-serif
  font-size 0.9em
  padding 10px 15px 11px
  border none
  border-radius 3px
  display block
  width 100%
  
  &::placeholder
    letter-spacing 0.15em

  &:focus,
  &:active
    outline 0

  &:focus
    .search__trigger
      opacity 1

.search__trigger
  position absolute
  top 0
  right 0
  width 40px
  height 40px
  opacity 0.8
  cursor pointer
  transition opacity 0.3s
  &:hover
    opacity 1
    transition opacity 0.3s
  &:after
    background url(/images/icon-search.svg) no-repeat 50% 50%
    background-size 38%
    content ''
    display inline-block
    height 40px
    width 40px
  
::-webkit-input-placeholder
  text-transform uppercase
  letter-spacing 1px
  font-size 12px

.search__results
  width 100%
  position absolute
  right 0
  top 37.5px
  max-height 410px
  overflow-y auto
  border-top 1.5px solid $border
  border-bottom-left-radius 3px
  border-bottom-right-radius 3px

.search__result-item
  display block
  text-decoration none
  padding 15px
  background white
  border 1.5px solid $border
  border-top none
  font-size 16px
  transition 300ms ease background
  cursor pointer
  color $brand-dark

  &:hover
    background #f7f4f4

  strong
    display block
    margin-right 5px
    max-width 60%
    text-overflow ellipsis
    overflow hidden
  
  &.hover--region-southern-africa
    &:hover
      background $southern-africa
      
      .color--region-southern-africa
        color white
        text-decoration underline
      .search__result__parent-label
        color white
        
  &.hover--region-west-africa
    &:hover
      background $west-africa
      
      .color--region-west-africa
        color white
        text-decoration underline
      .search__result__parent-label
        color white
        
  &.hover--region-central-africa
    &:hover
      background $central-africa
      
      .color--region-central-africa
        color white
        text-decoration underline
      .search__result__parent-label
        color white
        
  &.hover--region-eastern-africa
    &:hover
      background $eastern-africa
      
      .color--region-eastern-africa
        color white
        text-decoration underline
      .search__result__parent-label
        color white

.search__result__parent-label
  @extend .small-heading
  color $text-light

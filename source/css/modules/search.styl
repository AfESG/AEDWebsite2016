.search__container
  width 100%
  max-width 800px
  margin-left $nav-margin

.search__input
  border 1.5px solid $border
  width 100%
  border-radius 4px
  padding 12px 15px
  box-shadow inset 0 0 2px #ddd

::-webkit-input-placeholder
  text-transform uppercase
  letter-spacing 1px
  font-size 10px


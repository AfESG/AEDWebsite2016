.darp
  p, ul, li
    font-size 0.95em
    line-height 1.5
    margin 1.2em 0
  
  h1
    color: #322f30;
    font-size: 38px;
    margin: 1em 0;
    padding-top: 0;
  
  h2
    font-size 26px
  
  &__header
    &__logo
      display block
      text-decoration none
      width 100%
      height 100px
      background: url("/images/afesg-logo.png") no-repeat center center;
      background-size: contain;

  &__inner
    display block
    padding 35px 75px
    max-width 1000px
    margin 0 auto
    
    @media (max-width $mobile-max)
      padding 35px 20px
  
  .wiki
    ul, ol
      margin-left: 15px;
      margin-bottom: 0px;
      
      li
        display: list-item;
        list-style-type: disc;
    
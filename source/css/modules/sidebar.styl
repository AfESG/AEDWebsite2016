@import 'typography'

aside
  background #f7f7f7
  min-height 100vh
  transition width 250ms
  position relative
  z-index 2
  &.open
    width 35%
    display block
  &.closed
    width 0%
    display none

.sidebar__inner
  padding 20px 40px
  background #fff
  &:first-child
    background $brand-dark
    color #fff
    height 20vh
    min-height 200px
  &:last-child
    overflow-y auto
    height 80vh
  h1
    font-size 32px
    margin 55px 0 15px
    font-weight 600

.sidebar__year-nav__container
  position relative
  &:after
    position absolute
    content '\203A'
    transform rotate(90deg)
    left 42px
    top 4px

.sidebar__year-nav
  border 1px solid #fff
  border-width 0 0 1px 0
  background $brand-dark
  -webkit-appearance: none
  padding 3px 16px 3px 0
  color #fff
  border-radius 0
  font-size 14px
  display table
  position absolute
  li:not(.current)
    display none
  &:hover
    li
      cursor pointer
      display block
      &:hover
        font-weight bold

.sidebar__top-nav
  margin 0 0 15px 0
  padding-left 0
  display flex
  justify-content space-between
  width 70%
  li
    font-size 13px
    position relative
    line-height 1

.sidebar__year__current
  @extend .small-current

.sidebar__viz-type
  margin-left 0
  padding-left 0

.sidebar__viz-type li
  @extend .small-heading
  line-height 1
  margin-bottom 10px
  display table
  &.current
    @extend .small-current

.sidebar__stats-table
  width 100%
  margin-bottom 30px
  thead
    @extend .small-heading
    color $text-light
    border-bottom 1px solid
    td:last-child
      text-align right
  tbody td
    padding 3px 0
    &:last-child
      font-weight bold
      text-align right

.sidebar__table-container
  border-bottom 2px solid #dcdcdc
  h3
    font-weight 600
    padding 10px 0
    cursor pointer
    position relative
    &:after
      display inline-block
      position absolute
      right 10px
      color $text-light
  &.closed
    h3:after
      content '\276f'
      transform rotate(90deg)
    table
      display none
  &.open
    h3:after
      content '\276f'
      transform rotate(-90deg)
      right 8px
    table
      display table

.heading__small
  @extend .small-heading
